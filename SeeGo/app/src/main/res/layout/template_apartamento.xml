<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="apartamento"
            type="com.unicauca.mondragon.seego.models.Apartamento"/>
        <variable
            name="handler"
            type="com.unicauca.mondragon.seego.adapters.ApartamentoAdapter"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgApartamento"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/holo_blue_bright"
                    android:scaleType="centerCrop"
                    app:imgUrl="@{apartamento.imagen}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/mask"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/mask" />

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text='@{"Posee "+apartamento.size+" m2"}'
                    android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDireccion"
                    tools:text="Tamaño" />

                <TextView
                    android:id="@+id/txtDireccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="100dp"
                    android:text='@{"Dirección:"+apartamento.ubicacion}'
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgApartamento"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="Ubicacion" />

                <ImageButton
                    android:id="@+id/btnComment"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->handler.clickComment()}"
                    app:layout_constraintRight_toLeftOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/btnLike"
                    app:srcCompat="@mipmap/ic_comment" />

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->handler.clickLike()}"
                    app:layout_constraintHorizontal_bias="0.37"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btnComment"
                    app:layout_constraintTop_toBottomOf="@+id/txtSize"
                    app:srcCompat="@mipmap/ic_favorite" />

                <ImageButton
                    android:id="@+id/btndetails"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->handler.clickDetails()}"
                    app:layout_constraintHorizontal_bias="0.437"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                    app:layout_constraintRight_toLeftOf="@+id/btnContact"
                    app:layout_constraintTop_toBottomOf="@+id/txtSize"
                    app:srcCompat="@mipmap/ic_details" />

                <ImageButton
                    android:id="@+id/btnContact"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->handler.clickContact()}"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btndetails"
                    app:srcCompat="@mipmap/ic_contact" />

                <TextView
                    android:id="@+id/txtClike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="0dp"
                    android:text='@{""+apartamento.interesados}'
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/btnLike"
                    app:layout_constraintRight_toRightOf="@+id/btnLike"
                    app:layout_constraintTop_toBottomOf="@+id/btnLike"
                    app:layout_constraintVertical_bias="0.514"
                    tools:text="22" />

                <TextView
                    android:id="@+id/txtCcomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="0dp"
                    android:text='@{""+apartamento.comentarios.size()}'
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/btnComment"
                    app:layout_constraintRight_toRightOf="@+id/btnComment"
                    app:layout_constraintTop_toBottomOf="@+id/btnComment"
                    app:layout_constraintVertical_bias="0.514"
                    tools:text="22" />

                <TextView
                    android:id="@+id/txtDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:text="detalles"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintLeft_toLeftOf="@+id/btndetails"
                    app:layout_constraintRight_toRightOf="@+id/btndetails"
                    app:layout_constraintTop_toBottomOf="@+id/btndetails" />

                <TextView
                    android:id="@+id/txtContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:text="contacto"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintLeft_toLeftOf="@+id/btnContact"
                    app:layout_constraintRight_toRightOf="@+id/btnContact"
                    app:layout_constraintTop_toBottomOf="@+id/btnContact" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>
